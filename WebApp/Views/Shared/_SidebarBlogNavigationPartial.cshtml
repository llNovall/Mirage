@model Dictionary<int, Dictionary<int, int>>

<nav>
    <div class="row">
        <div class="col pe-0">
            <div class="mt-3">
                <h5 class="small-caps">Archive</h5>
                <hr class="border-2" />
            </div>
            
        </div>
    </div>

    @{
        Dictionary<int, string> monthNamesDict = new();
        monthNamesDict.Add(1, "January");
        monthNamesDict.Add(2, "February");
        monthNamesDict.Add(3, "March");
        monthNamesDict.Add(4, "April");
        monthNamesDict.Add(5, "May");
        monthNamesDict.Add(6, "June");
        monthNamesDict.Add(7, "July");
        monthNamesDict.Add(8, "August");
        monthNamesDict.Add(9, "September");
        monthNamesDict.Add(10, "October");
        monthNamesDict.Add(11, "November");
        monthNamesDict.Add(12, "December");

        foreach (int year in Model.Keys)
        {
            <div class="row mb-1">
                <div class="col pe-0">
                    <a class="p-2 text-start d-block nav-link bg-secondary text-white" data-bs-toggle="collapse" href="#Year-@year">@year</a>
                    <div id="Year-@year" class="collapse">

                        @{
                            foreach (int month in Model[year].Keys)
                            {
                                <a class="btn text-end btn-sm d-block">@monthNamesDict[month] <span class="badge bg-info">@Model[year][month]</span></a>
                            }
                        }

                    </div>
                </div>
            </div>

        }


    }

</nav>