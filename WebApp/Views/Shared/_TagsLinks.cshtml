@model List<TagBlogPostCountData>

<nav>
    <div class="row">
        <div class="col pe-0">
            <div class="mt-3">
                <h5 class="small-caps">Tags</h5>
                <hr class="border-2" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">

            @{
                for (int i = 0; i < Model.Count; i++)
                {
                    if(Model[i].BlogPostCount > 0)
                    {
                        <partial name="_TagsBadge" model="Model[i]" />
                    }
                }
            }

        </div>
    </div>
</nav>