@model ContactInputModel 

<div class="container mt-4">
    <div class="row">
        <div class="col">

            <div class="row border border-2 border-dark">
                <h2 class="p-1 ps-2 bg-dark text-white small-caps mb-0 fs-4">Contact Me</h2>
                <div class="col pt-3">
                   <p>If you want to get in touch with me, use this form for that.</p>
                </div>
                <form method="post">
                    <span class="text-muted d-block mt-1"><span class="text-danger">*</span> indicates a required field</span>
                    <div class="row">
                        <div class="col">
                            <label class="form-label" asp-for="Name"></label><span class="text-danger">*</span>
                            <input class="form-control" asp-for="Name"/>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col">
                            <label class="form-label" asp-for="EmailAddress"></label><span class="text-danger">*</span>
                            <input class="form-control" asp-for="EmailAddress" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col">
                            <label class="form-label" asp-for="Subject"></label><span class="text-danger">*</span>
                            <input class="form-control" asp-for="Subject"/>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col">
                            <label class="form-label" asp-for="Message"></label><span class="text-danger">*</span>
                            <textarea class="form-control" asp-for="Message"></textarea>
                        </div>
                    </div>

                    <div class="row mb-3 justify-content-end">
                        <div class="col-3 text-end">
                            <button class="btn btn-primary w-100 fw-bold" asp-action="Send" asp-controller="Contact" type="submit">Send</button>
                        </div>
                    </div>

                </form>
            </div>
           
        </div>
    </div>
</div>
